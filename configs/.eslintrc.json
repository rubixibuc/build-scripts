{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jasmine": true,
    "jest": true,
    "mocha": true,
    "mongo": true,
    "node": true,
    "phantomjs": true,
    "serviceworker": true,
    "worker": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    }
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "sort-imports": "error",
    "sort-keys": "error",
    "sort-vars": "error"
  }
}
